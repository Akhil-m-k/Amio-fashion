<%- include('./partials/header.ejs') -%>
        <main class="main">
            <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Login</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

             <!-- signUp alert -->
            <div class="text-center success <%= locals.alert?'d-block':'d-none'%>" style="width: 100%; border-radius: 0px; background-color: #09ad4b; font-size: 17px;">
                <span class="message text-white text-center">successfully registered.Please login to continue!</span>
            </div>
            <!-- End of signUp alert -->
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/assets/images/backgrounds/login-bg.jpg')">
            	<div class="container">
            		<div class="form-box">
                        <div class="form-tab">
                            <ul class="nav nav-pills nav-fill" role="tablist">
                                <li class="nav-item">
                                    <h4>LOGIN</h4>
                                </li>
                            </ul>
                            <div class="tab-content" id="tab-content-5">
                                <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                                  <form  action="/fogetPassword" method="post">                  
                                    <label for="email"> Email </label><br />
                                    <div class="input-group">
                                      <input type="email" class="form-control" id="otpInput" name="email">                           
                                         <input type="submit" class="btn btn-dark  " id="submit" value="submit" >   
                                  </div>
                                  <label for="" class="text-danger"><%= locals.error %></label>
                                  </form>
                                </div><!-- .End .tab-pane -->
                            </div><!-- End .tab-content -->
                        </div><!-- End .form-tab -->
                    </div><!-- End .form-box -->
            	</div><!-- End .container -->
            </div><!-- End .login-page section-bg -->
        </main><!-- End .main -->

<%- include('./partials/footer.ejs') -%>